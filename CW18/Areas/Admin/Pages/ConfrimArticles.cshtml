@page
@model CW18.Areas.AdminArea.Pages.ConfrimArticlesModel
@if (TempData["False"]=="False")
{
    <h1>لاگین نیستید</h1>
}
else{
<div class="card-deck">
    @foreach (var item in Model.Articles)
    {
        <div class="card">
            <img class="card-img-top" src="@item.Image" alt="">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">
                    @item.Description
                </p>
                <p class="card-text"><small class="text-muted">@item.Reporter.FisrtName @item.Reporter.LastName</small></p>
                @if (item.IsConfrim == true)
                {
                    <p class="btn btn-outline-secondary disabled">تایید شده</p>
                }else
                {
                    <a asp-route-id="@item.Id" asp-page-handler="Confrim" class="btn btn-outline-success">در انتظار تایید</a>
                }
            </div>
        </div>
    }
</div>
}