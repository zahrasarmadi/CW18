@page
@model CW18.Areas.AdminArea.Pages.CategoriesManagementModel
@if (TempData["true"] == "false")
{
    <h1>این صفحه مخصوص ادمین است</h1>
}

<a asp-page="AddCategory" class="btn btn-outline-success">اضافه کردن دسته بندی</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">نام دسته بندی</th>
            <th scope="col">تعداد مقاله های موجود درین دسته بندی</th>
            <th scope="col">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoriesList)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Name</th>
                <td>@item.Articles.Count</td>
                <td>
                    <a asp-route-id="@item.Id" asp-page-handler="Delete" class="btn btn-outline-danger">حذف</a>
                    <a asp-route-id="@item.Id" asp-page="EditCategory" class="btn btn-outline-warning">ویرایش</a>
                </td>
            </tr>
        }
    </tbody>
</table>