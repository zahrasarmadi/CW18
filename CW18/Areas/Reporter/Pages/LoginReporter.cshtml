@page
@model CW18.Areas.ReporterArea.Pages.LoginReporterModel
<h1>ورود خبرنگار</h1>
<form method="post">
    <div class="form-row">
        <div class="form-group p-3">
            <label asp-for="@Model.Login.Email"></label>
            <input class="form-control pt-1" asp-for="@Model.Login.Email">
        </div>

        <div class="form-group p-3">
            <label asp-for="@Model.Login.Password"></label>
            <input type="text" class="form-control pt-1" asp-for="@Model.Login.Password">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">ورود</button>
</form>