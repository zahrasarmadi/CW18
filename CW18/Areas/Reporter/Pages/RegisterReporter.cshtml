@page
@model CW18.Areas.ReporterArea.Pages.RegisterReporterModel
<h1>ثبت نام خبرنگار</h1>
<form method="post">
    <div class="form-row">
        <div class="form-group p-3">
            <label asp-for="@Model.ReporterViewModel.FisrtName"></label>
            <input class="form-control pt-1" asp-for="@Model.ReporterViewModel.FisrtName">
        </div>
        <div class="form-group p-3">
            <label asp-for="@Model.ReporterViewModel.LastName"></label>
            <input class="form-control pt-1" asp-for="@Model.ReporterViewModel.LastName">
        </div>
        <div class="form-group p-3">
            <label asp-for="@Model.ReporterViewModel.Email"></label>
            <input type="email" class="form-control pt-1" asp-for="@Model.ReporterViewModel.Email">
        </div>
        <div class="form-group p-3">
            <label asp-for="@Model.ReporterViewModel.Password"></label>
            <input type="password" class="form-control pt-1" asp-for="@Model.ReporterViewModel.Password">
        </div>

    </div>
    <button type="submit" class="btn btn-primary">ثبت نام</button>
</form>
