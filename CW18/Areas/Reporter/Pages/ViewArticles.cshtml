@page
@model CW18.Areas.ReporterArea.Pages.ViewArticlesModel
@{
}
<h1>مقاله ها</h1>
<div class="card-group">
    @foreach (var item in Model.ArticlesList)
    {
        <div class="card">
            <img class="card-img-top" src="@item.Image" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Reporter.FisrtName @item.Reporter.LastName</p>
                <a asp-page="SelectedArticle" asp-area="Viewer" asp-route-id="@item.Id" class="btn btn-outline-info">بیشتر...</a>
            </div>
            
        </div>
    }
    </div>