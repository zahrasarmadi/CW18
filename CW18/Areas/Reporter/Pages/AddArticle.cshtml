@page
@model CW18.Areas.ReporterArea.Pages.AddArticleModel
@{
}
<h1>افزودن خبر</h1>
<form method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group p-3">
            <label asp-for="@Model.Article.Title"></label>
            <input class="form-control pt-1" asp-for="@Model.Article.Title">
        </div>
        <div class="form-group p-3">
            <label asp-for="@Model.Article.CategoryId">انتخاب دسته بندی</label>  
            <select class="form-control pt-1" asp-for="@Model.Article.CategoryId">
                @foreach(var item in Model.Categories)
                {
                <option value="@item.Id">@item.Name</option>
                }
                </select>
        </div>
        <div class="form-group p-3">
            <label asp-for="@Model.Article.Description"></label>
            <input type="text" class="form-control pt-1" asp-for="@Model.Article.Description">
        </div>
        <div class="form-group">
            <label asp-for="@Model.Image"></label>
            <input asp-for="@Model.Image" type="file" class="form-control" />
        </div>

    </div>
    <button type="submit" class="btn btn-primary">ثبت مقاله</button>
</form>