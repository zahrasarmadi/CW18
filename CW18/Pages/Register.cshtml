@page
@model CW18.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}
<section class="section pt-55 mb-50">
    <div class="container-fluid">
        <div class="sign widget">
            <div class="section-title">
                <h5>ثبت نام</h5>
            </div>
            <form class="sign-form widget-form contact_form " method="post">
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="نام" asp-for="@Model.RegisterView.FisrtName">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="نام خانوادگی" asp-for="@Model.RegisterView.LastName">
                </div>
                <div class="form-group">

                    <input type="email" class="form-control" placeholder="آدرس ایمیل *" asp-for="@Model.RegisterView.Email">
                </div>
                <div class="form-group">

                    <input type="password" class="form-control" placeholder="رمز عبور *" asp-for="@Model.RegisterView.Password">
                </div>
                <div class="sign-controls form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="rememberMe">
                        <label class="custom-control-label" for="rememberMe">ادمین هستم0</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-custom">ثبت نام</button>
                </div>
                <p class="form-group text-center">حساب کاربری دارید؟ <a href="login.html" class="btn-link">وارد شوید</a> </p>
            </form>
        </div>
    </div>
</section>